# /etc/roost/roost.env — Roost configuration file.
# Owned by root:roost, mode 640 (root can write, roost user can read).
# Edit this file, then: sudo systemctl restart roost

# ─── Core ────────────────────────────────────────────────────────────────────

# Operating mode: private (self-hosted) or public (managed with billing)
ROOST_MODE=private

# HTTP port Roost listens on
PORT=8080

# Secret key for signing JWT tokens. REQUIRED.
# Generate with: openssl rand -hex 32
ROOST_SECRET_KEY=

# Public hostname (used for CORS and cookie domains)
ROOST_DOMAIN=localhost

# ─── PostgreSQL ──────────────────────────────────────────────────────────────

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=roost
POSTGRES_USER=roost
# REQUIRED
POSTGRES_PASSWORD=

# ─── Redis ───────────────────────────────────────────────────────────────────

REDIS_URL=redis://localhost:6379/0

# ─── Storage ─────────────────────────────────────────────────────────────────

STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=roost
STORAGE_SECRET_KEY=
STORAGE_BUCKET=roost-media

# ─── Media paths ─────────────────────────────────────────────────────────────

MEDIA_PATH=/var/lib/roost/media
RECORDINGS_PATH=/var/lib/roost/recordings
