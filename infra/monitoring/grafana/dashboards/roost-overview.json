{
  "title": "Roost â€” Service Overview",
  "uid": "roost-overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": ["roost"],
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Active Streams",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "roost_active_streams_total",
          "legendFormat": "streams"
        }
      ],
      "options": {
        "colorMode": "background",
        "thresholds": {
          "steps": [
            {"color": "green", "value": 0},
            {"color": "yellow", "value": 100},
            {"color": "red", "value": 200}
          ]
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Active Subscribers",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
      "targets": [
        {"expr": "roost_subscribers_active", "legendFormat": "subscribers"}
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP Request Rate by Service",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "sum by (service) (rate(roost_http_requests_total[5m]))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "HTTP P95 Latency (seconds)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, service) (rate(roost_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95 {{service}}"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Stream Errors",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "sum by (type) (rate(roost_stream_errors_total[5m]))",
          "legendFormat": "{{type}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Billing Events",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 12},
      "targets": [
        {
          "expr": "sum by (event) (rate(roost_billing_events_total[1h]))",
          "legendFormat": "{{event}}"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Auth Events",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 12},
      "targets": [
        {
          "expr": "sum by (event, result) (rate(roost_auth_events_total[5m]))",
          "legendFormat": "{{event}} / {{result}}"
        }
      ]
    }
  ]
}
